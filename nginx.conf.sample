server {
    listen 8070;
    
    location ~ ^/(static/.*)$ {
        root PWD/page;
    }

    location / {
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header Host $http_host;
        proxy_set_header X-NginX-Proxy true;

        proxy_pass http://127.0.0.1:PORT;
        proxy_redirect off;
    }
}
